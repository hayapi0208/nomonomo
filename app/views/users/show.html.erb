<div class="main">
  <div class="mypage-inner">
    <div class="mypage-area">
      <div class="mypage-contents">
        <div class="mypage-nickname">
          <%= @user.nickname %>さんのマイページ
        </div>

        <table class="table">
          <tbody>
            <tr>
              <th class="table__col1">名前</th>
              <td class="table__col2"><%= @user.nickname %></td>
            </tr>
            <tr>
              <th class="table__col1">自己紹介</th>
              <td class="table__col2"><%= @user.introduction %></td>
            </tr>
            <tr>
              <th class="table__col1">都道府県</th>
              <td class="table__col2"><%= @user.prefecture.name %></td>
            </tr>
          </tbody>
        </table>

        <div class="history">＜投稿履歴＞</div>
        <div class="contents-area">
          <% @posts.each do |post| %>
            <a href="<%= post_path(post.id) %>" class="content-post-link">
              <div class="content-post">
                <% if post.image.attached? %>
                 <%= image_tag post.image.variant(resize: '500x200'), class: :back__image %>
                <% end %>
                <div class="content-post-inner">
                  <div class="content-high">
                    <div class="content-upload">
                      <%= post.created_at %>
                    </div>
                  </div>
                  <div class="content-middle">
                    <div class="content-title">
                      <%= post.title %>
                    </div>
                    <div class="content-place">
                      <%= post.prefecture.name %>
                    </div>
                  </div>
                  <div class="content-low">
                    <div class="content-text">
                      <%= post.text %>
                    </div>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>